{
  "name": "dev-job",
  "version": "1.0.0",
  "scripts": {
    "predev": "$npm_execpath run database:start && $npm_execpath run database:migrate",
    "dev": "blitz dev",
    "build": "blitz build",
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "database:start": "docker-compose up -d",
    "database:stop": "docker-compose down",
    "database:migrate": "blitz prisma migrate dev"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "1.1.2",
    "@emotion/react": "11.1.4",
    "@emotion/styled": "11.0.0",
    "@prisma/client": "2.26.0",
    "blitz": "0.38.3",
    "final-form": "4.20.2",
    "framer-motion": "3.2.0",
    "react": "alpha",
    "react-dom": "alpha",
    "react-final-form": "6.5.3",
    "zod": "3.5.1"
  },
  "devDependencies": {
    "@types/preview-email": "2.0.0",
    "@types/react": "17.0.13",
    "eslint": "7.30.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.3.2",
    "prettier-plugin-prisma": "0.13.2",
    "pretty-quick": "3.1.1",
    "preview-email": "3.0.4",
    "prisma": "2.26.0",
    "typescript": "~4.3"
  },
  "private": true
}
